@model IEnumerable<mouzikty.Models.Artiste>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.Image ?? "noimage.jpg");
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h5><b>Id :</b> @item.Id</h5>
                <h5><b>Name : </b> @item.Name</h5>

            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a asp-controller="Artiste" asp-action="Details" asp-route-id="@item.Id"
                   class="btn btn-primary m-1">View</a>
                <a asp-action="Edit" asp-controller="Artiste" class="btn btn-primary m-1" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-controller="Artiste" class="btn btn-danger m-1" asp-route-id="@item.Id">Delete</a>
            </div>
        </div>
    }
</div>
